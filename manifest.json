{
  "manifest_version": 3,
  "name": "Substack Focus",
  "version": "2.0.0",
  "description": "Enhanced productivity extension for Substack with selective blocking, usage statistics, and focus metrics",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "*://*.substack.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Substack Focus - Control Your Reading Experience",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.substack.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}